FROM python:3.14-slim

WORKDIR /app

# Install build dependencies for asyncpg
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN pip install uv

# Create data directory
RUN mkdir -p data

# Expose port
EXPOSE 8000

# Sync dependencies at startup, then run uvicorn
# (uv sync is fast when deps are cached and handles volume-mounted pyproject.toml)
CMD ["sh", "-c", "uv sync && uv run uvicorn main:app --host 0.0.0.0 --port 8000 --reload --reload-exclude .venv --reload-exclude load_data.py"]
